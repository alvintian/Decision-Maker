<!DOCTYPE html>
<html lang="en">
<head>
  <title>Polling</title>

  <link rel="stylesheet" href="/styles/test.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
</head>
<div id="tes"><%=pollData["options"].length%></div>
<div id="pollId"><%=pollData["pollID"]%></div>

<body>
  <h1 class="question"><%=pollData.pollQuestion%></h1>
  <div class='circle-container' id='rails' ondrop="drop(event, this)" ondragover="allowDrop(event)">
    <% pollData["options"].forEach(function (option) { %>
    <div class='option'><%=option%></div>
    <% }) %>
  </div>

  <form action="/api/users/result" method="POST" id="hide" onsubmit="countScore()" class="submit_box">
    <input type="hidden" value="<%=pollData['pollID']%>" name="pollid">
  <input type="submit" value="submits" name="submit_button">
  </form>
  <div class="box" id="boxy" ondrop="drop(event, this)" ondragover="allowDrop(event)"></div>
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/retrieve-options.js"></script>

</body>

</html>
