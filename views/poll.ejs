<!DOCTYPE html>
<html lang="en">
<head>
  <title>Polling</title>

  <link rel="stylesheet" href="/styles/test.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
<style>
:root {
    --element-dimen: 100/<%=pollData["options"].length%>;
    --element-pic1: <%=pollData['pictures'][0]%>;
}
</style>
</head>
<div id="tes" class="debug"><%=pollData["options"].length%></div>
<div id="pic1" class="debug"><%=pollData['pictures'][0]%></div>
<body>
  <h1 class="question"><%=pollData.pollQuestion%></h1>
    <%let i=0%>
  <div class='left-container' id='leftrails' ondrop="drop(event, this)" ondragover="allowDrop(event)">
    <% pollData["options"].forEach(function (option) { %>
    <div class='option' style="background-image: url(../styles/images/<%= pollData['pictures'][i]%>)"><%=option%></div>
    <% i++ %>
    <% }) %></div>

  <div class="box" id="boxy" ondrop="drop(event, this)" ondragover="allowDrop(event)"></div>
  <div class='right-container' id='rightrails' ondrop="drop(event, this)" ondragover="allowDrop(event)"></div>
  <form action="/api/users/result" method="POST" id="hide" onsubmit="countScore()" class="submit_box">
    <input type="hidden" value="<%=pollData['pollID']%>" name="pollid">
  <input type="submit" value="Vote" name="submit_button" class="debug" id="sneak">
  </form>
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/retrieve-options.js"></script>
</body>
</html>
